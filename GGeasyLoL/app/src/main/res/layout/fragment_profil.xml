<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antika.berk.ggeasylol.fragment.ProfilFragment"
    android:orientation="vertical"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summoner_name"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="?attr/colorAccent"
        android:layout_margin="10dp" />

    <View
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="@color/secondary_text"
        android:layout_margin="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/champion_logo"
            android:layout_height="200dp" />

        <ImageView
            app:srcCompat="@drawable/icon"
            android:id="@+id/imageView19"
            android:layout_marginTop="137dp"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="120dp"
            android:layout_width="150dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageView19"
            android:layout_toStartOf="@+id/imageView19"
            android:layout_below="@+id/champion_logo">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/adc"
                    android:id="@+id/imageView13"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/textView64"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/asist"
                    android:id="@+id/imageView13"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView66"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/minion10"
                    android:id="@+id/imageView13"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView65"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/holo_purple"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView19"
            android:layout_toEndOf="@+id/imageView19"
            android:layout_below="@+id/champion_logo"
            android:layout_alignBottom="@+id/linearLayout">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageView24"
                android:layout_height="50dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView62"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textAlignment="viewEnd"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView63"
                android:textAlignment="viewEnd"
                android:textStyle="normal|bold"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView19"
            android:layout_centerHorizontal="true">

            <ImageView
                app:srcCompat="@drawable/goldicon"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView51"
                android:layout_toStartOf="@+id/textView51"
                android:id="@+id/imageView16"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/textView51"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rozet_view"
            android:numColumns="3" />
    </LinearLayout>

</LinearLayout>
