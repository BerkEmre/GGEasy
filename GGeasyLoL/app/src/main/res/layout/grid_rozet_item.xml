<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.mobstac.circularimageprogress.CircularImageProgressView
        android:id="@+id/rozet_icon"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_centerInParent="true"
        android:padding="5dp"
        app:max="100"
        app:progress_background_color="@color/common_google_signin_btn_text_dark_disabled"
        app:progress_color="@color/common_google_signin_btn_text_light_default"
        app:progress_width="50" />

    <com.mobstac.circularimageprogress.CircularImageProgressView
        android:id="@+id/rozet_icon1"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:visibility="gone"
        app:max="100"
        app:progress_background_color="@color/common_google_signin_btn_text_dark_disabled"
        app:progress_color="@color/accent"
        app:progress_width="50" />

    <com.mobstac.circularimageprogress.CircularImageProgressView
        android:id="@+id/rozet_icon2"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:visibility="gone"
        app:max="100"
        app:progress_background_color="@color/common_google_signin_btn_text_dark_disabled"
        app:progress_color="@color/cast_intro_overlay_button_background_color"
        app:progress_width="50" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/asist" />

</RelativeLayout>